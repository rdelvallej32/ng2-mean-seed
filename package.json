{
  "name": "ng2-seed",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server/index.js",
    "clean": "del-cli .tmp && del-cli dist",
    "clean:src-map": "del-cli dist/server/**/*.js.map",
    "build": "npm run clean && npm run build:dev:server && npm run build:dev:client",
    "build:dll": "webpack --config webpack.config.dll.js --progress --profile --bail",
    "build:prod": "npm run build:prod:server && npm run build:prod:client",
    "build:dev:client": "webpack --config webpack.config.dev.js --progress --colors --profile --watch",
    "build:dev:server": "babel -d .tmp/server ./server -s",
    "build:prod:client": "del-cli dist/client/app/js && ngc -p tsconfig.aot.json && ngc -p tsconfig.aot.json && webpack --config webpack.config.prod.js --progress --profile --bail && del-cli 'dist/client/app/js/**/*.js' 'dist/client/app/js/**/*.js.map' '!dist/client/app/js/bundle.js' '!dist/client/app/js/*.chunk.js' 'client/app/**/*.ngfactory.ts' 'client/app/**/*.ngsummary.json' 'client/app/**/*.ngstyle.ts' 'client/app/**/*.shim.ts'",
    "build:prod:server": "del-cli dist/server && babel -d ./dist/server ./server -s && npm run clean:src-map && npm run clean:src-map && npm run build:static-html",
    "build:static-html": "mkdir dist/server/views && cp server/views/index.hbs dist/server/views",
    "dev:dll": "npm run clean && npm run build:dll && npm run build:dev:client",
    "watch:server": "nodemon ./server/index.js"
  },
  "dependencies": {
    "@angular/common": "^2.4.5",
    "@angular/compiler": "^2.4.5",
    "@angular/compiler-cli": "^2.4.5",
    "@angular/core": "^2.4.5",
    "@angular/forms": "^2.4.5",
    "@angular/http": "^2.4.5",
    "@angular/material": "^2.0.0-beta.2",
    "@angular/platform-browser": "^2.4.5",
    "@angular/platform-browser-dynamic": "^2.4.5",
    "@angular/platform-server": "^2.4.5",
    "@angular/router": "^3.4.5",
    "@angular/upgrade": "^2.4.5",
    "@types/socket.io-client": "^1.4.29",
    "bluebird": "^3.4.7",
    "body-parser": "~1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.4.1",
    "debug": "~2.2.0",
    "dotenv": "^4.0.0",
    "express": "~4.14.0",
    "hammerjs": "^2.0.8",
    "hbs": "~4.0.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.8.0",
    "morgan": "~1.7.0",
    "rxjs": "^5.0.3",
    "serve-favicon": "~2.3.0",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "@types/node": "^7.0.4",
    "add-asset-html-webpack-plugin": "^1.0.2",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "del-cli": "^0.2.1",
    "errorhandler": "^1.5.0",
    "eslint": "^3.13.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.2",
    "source-map-loader": "^0.1.6",
    "typescript": "^2.1.5",
    "uglifyjs-webpack-plugin": "^0.2.1",
    "webpack": "^2.1.0-beta.21",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-dev-server": "^2.3.0",
    "webpack-dll-bundles-plugin": "^1.0.0-beta.5",
    "webpack-hot-middleware": "^2.17.0",
    "webpack-merge": "^2.6.1"
  }
}
